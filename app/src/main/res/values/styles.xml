<resources>

    <!-- TextInputLayout style -->
    <style name="OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#2196F3</item>
        <item name="hintTextColor">#808080</item>
    </style>

    <!-- Spinner style -->
    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Primary Button style -->
    <style name="Widget.App.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:background">#2196F3</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Secondary Button style -->
    <style name="Widget.App.Button.Secondary" parent="Widget.AppCompat.Button">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#2196F3</item>
    </style>
    <style name="HorizontalProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
    </style>


    <!-- Base application theme. -->
    <style name="Theme.Attendance" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2196F3</item> <!-- Blue -->
        <item name="colorPrimaryVariant">#1976D2</item> <!-- Darker blue -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for normal dates -->
    <style name="NormalDateStyle">
        <item name="android:textColor">@android:color/black</item>
        <!-- Add any other styling properties you want for normal dates -->
    </style>

    <style name="AbsentDateStyle">
        <item name="android:textColor">@color/secondary_variant_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PresentDateStyle">
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">16sp</item>
    </style>




</resources>
